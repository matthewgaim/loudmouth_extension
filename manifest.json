{
    "manifest_version": 3,
    "name": "loudmouth",
    "version": "1.0.0",
    "minimum_chrome_version": "116",
    "action": {},
    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": ["src/background/inject.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": ["scripting", "activeTab", "storage"]
}